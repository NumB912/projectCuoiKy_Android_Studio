<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="307dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:id="@+id/fragmentOther"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/Bocchi"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/button_ripple_home"
            android:backgroundTint="@color/Bocchi"
            android:backgroundTintMode="add"
            android:clickable="true"
            android:contentDescription="TODO"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/baseline_arrow_back_ios_new_24"
            android:tintMode="src_in"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>
    </LinearLayout>


    <LinearLayout android:id="@+id/fragmentHome"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Year_View"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Năm"
            android:textColor="#FFD700"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Day_View"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Tháng"
            android:textColor="@android:color/holo_blue_light"
            android:textSize="28sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>



